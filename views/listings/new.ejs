<% layout("/layouts/boilerplate") %>

  <body>
    <div class="row">
      <div class="col-8 offset-2">
        <h3>Create a new listing</h3>
        <br>
        <form method="POST" action="/listings" novalidate class="needs-validation">
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" class="form-control" placeholder="enter title" required>
            <!-- if you get any doubt in listing[title] read the below comment -->
            <div class="valid-feedback">Title looks good</div>               <!-- this bootstrap property will be show when the placeholder is filled by the user-->
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" cols="30" rows="10" required></textarea>
          </div>

          <div class="mb-3">
            <label for="image" class="form-label">URL/Link</label>
            <input type="text" name="listing[image]" class="form-control" placeholder="enter the image  URL/Link">
          </div>


          <div class="row">
            <div class="mb-3 col-4">
              <label for="price" class="form-label">Price</label>
              <input type="text" name="listing[price]" class="form-control" placeholder="enter the price" required>
              <div class="invalid-feedback">Please enter a valid price</div>               <!-- this bootstrap property will be show when the placeholder is filled by the user-->

            </div>
            
            <div class="mb-3 col-8">
              <label for="country" class="form-label">Country</label>
              <input type="text" name="listing[country]" class="form-control" placeholder="enter the country" required>
              <div class="invalid-feedback">Please enter a valid country</div>               <!-- this bootstrap property will be show when the placeholder is filled by the user-->

            </div>
          </div>
          

          <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" class="form-control" placeholder="enter the location" required>
            <div class="invalid-feedback">Please enter a valid location</div>               <!-- this bootstrap property will be show when the placeholder is filled by the user-->

          </div>

          <br>
          <button class="btn add-btn btn-dark">ADD</button>
        </form>
        <br>
      </div>
    </div>
  </body>



  <!-- Using name="listing[title]" in HTML forms ensures that when the form is submitted,
  Express (with express.urlencoded({ extended: true })) parses the input as a nested object:
  
    req.body = {
      listing: {
        title: "..."
      }
    }

  This is useful for directly passing the data into Mongoose models like:
    const newListing = new Listing(req.body.listing);

  Avoid using name="listing.title" â€” it will be parsed as:
    req.body = { "listing.title": "..." }
  which does not create a nested object. -->