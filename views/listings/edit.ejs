<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h3>Edit the listing</h3>
                <br>
                <form method="POST" action="/listings/<%= listing._id %>?_method=put">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]"   class="form-control"   value="<%=listing.title%>">
                    </div>
                    <!-- if you get any doubt in listing[title] read the below comment -->
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <br>
                    <textarea name="listing[description]" class="form-control" cols="30" rows="10">"<%= listing.description%>"</textarea>
                    </div>
                    <!-- listing[description] this is same as listing.description -->
                    <div class="mb-3">
                        <label for="image" class="form-label">Image</label>
                    <input type="text" name="listing[image]" class="form-control" value="<%= listing.image%>">
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                    <input type="text" name="listing[price]" class="form-control" value="<%= listing.price%>">
                    </div>
                    <!-- always wrap the dynamic values in double quotes or else only the first word will be considered -->
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" class="form-control" value="<%= listing.location%>">
                    </div>
                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" class="form-control" value="<%= listing.country%>">
                    </div>
                    <button class="btn edit-btn btn-dark">Edit</button>
                </form>
                <br>
            </div>
        </div>
    </body>