<% layout("/layouts/boilerplate") %>
  <div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on Wonderlust</h1>
    <div class="col-6 offset-3">
      <form action="/signup" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="text" id="username" name="username" class="form-control" required>                  <!-- if you get any doubt in listing[title] read the below comment -->
          <div class="valid-feedback">looks good</div>                                               <!-- this bootstrap property will be show when the placeholder is filled by the user-->
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" id="email" name="email" class="form-control" required>       
        </div>
        <div class="mb-3">
          <label for="Password" class="form-label">Password</label>
          <input type="password" id="password" name="password" class="form-control" required>
          <div class="valid-feedback">looks good</div>
        </div>
        <button class="btn btn-success">SignUp</button>
      </form>
    </div>
  </div>